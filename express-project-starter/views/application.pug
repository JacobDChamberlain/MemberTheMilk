extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/application.css")
  //- add page specific js
  script(src="/javascripts/application.js" type="module" defer)

block content
  h1= title
  p Welcome to your Project Skeleton application page
  div(id='applicationPageContainer')
    div(id='navbarLeft')
      select(id='inboxDropDown')
        option(id='allTaskList') All Tasks
        option(id='todayList') Today
        option(id='tomorrowList') Tomorrow
        option(id='weekList') This Week
        option(id='trashList') Trash
      br
      select(id='listLists')
        option(id='personal') Personal
        option(id='work') Work
      br

    div(id='tasksPage')
      //- img(src='./blahBlahBlah')
      button(id='logoutBtn') Sign Out
      form(action='/application' method='post')
      //- search(id='searchTask')
      button(id='incompleteBtn') Incomplete 
      button(id='completeBtn') Completed 
      br
      input(id='addTaskInput' required) 
      button(id='addTaskBtn') Add Task 

      div(id='taskDisplay')
        //- input(type='checkbox' name='task' checked) 



      br
    div(id='listSummaryPage')
      textarea(id='currListName' placeholder= 'listCategory')

